# StoryLine AI - Testing Configuration (Zero Cost)
# Copy to .env for cost-free local testing

# Testing Mode - Use local TTS only
TESTING_MODE=local_tts
MONTHLY_TTS_BUDGET=0
TTS_QUALITY=basic
TTS_FALLBACK=say

# Twilio Testing (Use trial credits)
TWILIO_ACCOUNT_SID=your_test_account_sid
TWILIO_AUTH_TOKEN=your_test_auth_token
TWILIO_PHONE_NUMBER=your_test_phone_number

# Local Development
BASE_URL=https://your-id.ngrok.io
FLASK_ENV=development
FLASK_DEBUG=True

# Database (Local SQLite)
DATABASE_URL=sqlite:///storyline_ai_test.db

# Disable paid APIs for testing
OPENAI_API_KEY=
ELEVENLABS_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=
AZURE_SPEECH_KEY=