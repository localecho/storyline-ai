# StoryLine AI Environment Variables
# Copy this file to .env and fill in your actual values

# Twilio Configuration (Required for MVP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
BASE_URL=https://your-domain.ngrok.io
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///storyline_ai.db

# AI/ML APIs (For future phases)
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Security
SECRET_KEY=your_secret_key_for_sessions_here

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Email Configuration (For notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Storage Configuration (For production)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=storyline-ai-audio-storage
AWS_REGION=us-east-1

# Content Moderation
PERSPECTIVE_API_KEY=your_perspective_api_key_here

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_tracking_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here